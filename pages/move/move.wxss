/* pages/move/move.wxss */

.container_move {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.container_move_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 96rpx;
}

.containser_move_location {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 16px;
}

.text_location {
  font-size: 12px;
  color: #666;
}

.image_pull {
  width: 12px;
  height: 12px;
  margin-left: 2px;
}

.line {
  width: 100%;
  height: 1rpx;
  background: #e6e6e6;
}

.containser_select {
  display: flex;
  flex-direction: row;
  align-items: stretch;
}

.select_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 10px;
  padding-right: 10px;
}

.text_select_item {
  font-size: 14px;
  color: #ee3b3b;
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
}

.text_select_item_unselected {
  font-size: 14px;
  color: #333;
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
}

.search {
  width: 16px;
  height: 16px;
  padding-right: 16px;
}

.select_line {
  width: 90rpx;
  height: 4rpx;
  background: #ee3b3b;
}

.swiper_container {
  width: 100%;
  flex: 1;
}

.container_column {
  display: flex;
  flex-direction: column;
}

.container_thermal {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px;
}

.thermal_image {
  width: 120rpx;
  height: 180rpx;
  margin-right: 10px;
}

.container_thermal_detail {
  display: flex;
  flex-direction: column;
  margin-right: 10px;
  flex: 1;
}

.thermal_move_name {
  font-size: 18px;
  color: #333;
}

.thermal_move_type {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.thermal_move_star {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.thermal_move_num {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.container_thermal_right {
  display: flex;
  flex-direction: column;
  text-align: right;
  float: right;
}

.thermal_grade {
  font-size: 10px;
  color: #ffb004;
}

.thermal_btn_buy {
  background: #ee3b3b;
  border-radius: 5px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 4px;
  margin-top: 10px;
  align-items: center;
}

.text_buy {
  font-size: 12px;
  color: #fff;
}

.container_reflect {
  display: flex;
  flex-direction: column;
  padding-bottom: 10px;
  padding-top: 10px;
}

.text_reflect_refresh {
  font-size: 12px;
  color: #333;
  margin-bottom: 5px;
  padding-left: 10px;
}

.reflect_top_scroll {
  display: inline-block;
  width: 160rpx;
  padding-left: 10px;
}

.reflect_top_content {
  display: flex;
  flex-direction: column;
  padding-bottom: 5px;
  width: 160rpx;
}

.text_reflect_move_name {
  font-size: 12px;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text_reflect_move_num {
  font-size: 10px;
  color: #999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.reflect_top_image {
  width: 160rpx;
  height: 220rpx;
}

.reflect_view {
  width: 100%;
  height: 5px;
  background: #f7f7f7;
}

.container_reflect {
  display: flex;
  flex-direction: column;
}

.reflect_list_data {
  font-size: 10px;
  color: #333;
  padding-left: 10px;
  padding-top: 10px;
}

.container_reflect_list {
  display: flex;
  flex-direction: row;
  padding: 10px;
}

.container_reflect_all {
  display: flex;
  flex-flow: column;
}

.reflect_like{
  background: rgba(52, 52, 52, 0.8);
  width: 50rpx;
  height: 50rpx;
}